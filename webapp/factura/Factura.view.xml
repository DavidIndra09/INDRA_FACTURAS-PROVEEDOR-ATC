<mvc:View
    controllerName="usil.com.createinvoice.atc.factura.Factura"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
>
    <f:DynamicPage
        showFooter="true"
        id="page"
        busy="{facturaView>/busy}"
        busyIndicatorDelay="{facturaView>/delay}"
    >
        <f:title>
            <f:DynamicPageTitle
                areaShrinkRatio="1:1.6:1.6"
                backgroundDesign="Transparent"
            >
                <f:heading>
                    <Title
                        text="{facturaView>/facturaViewTitle}"
                        level="H2"
                    />
                </f:heading>
                <f:navigationActions>
                    <Button
                        icon="sap-icon://decline"
                        type="Reject"
                        press=".onNavBack"
                    />
                </f:navigationActions>
                <f:breadcrumbs>
                    <Breadcrumbs>
                        <Link
                            text="Solicitudes"
                            press="onNavBack"
                        />
                    </Breadcrumbs>
                </f:breadcrumbs>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader backgroundDesign="Transparent">
                <f:content>
                    <core:Fragment
                        fragmentName="usil.com.createinvoice.atc.factura.Cabecera"
                        type="XML"
                    />
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <core:Fragment
                fragmentName="usil.com.createinvoice.atc.factura.Tabla"
                type="XML"
            />
        </f:content>
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    text="Guardar"
                    type="Success"
                    icon="sap-icon://save"
                    press=".onCreateInvoice"
                />
                <Button
                    text="Cancelar"
                    type="Negative"
                    icon="sap-icon://sys-cancel"
                    press="onNavSolicitudes"
                />
            </OverflowToolbar>
        </f:footer>
        <f:header />
    </f:DynamicPage>
</mvc:View>
