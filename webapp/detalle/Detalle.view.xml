                        minScreenWidth="Tablet"
                    >
                        <Label
                            text="{i18n>material}"
                            design="Bold"
                        />
                    </Column>
                    <Column
                        hAlign="End"
                        demandPopin="true"
                        minScreenWidth="Tablet"
                    >
                        <Label
                            text="{i18n>cantidad}"
                            design="Bold"
                        />
                    </Column>
                    <Column
                        demandPopin="true"
                        minScreenWidth="Tablet"
                        hAlign="End"
                    >
                        <Label
                            text="{i18n>importe}"
                            design="Bold"
                        />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem press=".onPress">
                        <cells>
                            <ObjectIdentifier title="{BELNR}" />
                            <Text text="{POSNR}" />
                            <Text text="{EBELN}" />
                            <Text text="{EBELP}" />
                            <ObjectIdentifier
                                title="{MATNR}"
                                text="{TXZ01}"
                            />
                            <ObjectNumber
                                number="{
                                    path: 'MENGE',
                                    formatter: '.formatter.numberUnit'
                                }"
                                unit="{MEINS}"
                            />
                            <ObjectNumber
                                number="{
                                    parts:[{path:'NETWR'},{path:'WAERS'}],
                                    type: 'sap.ui.model.type.Currency',
                                    formatOptions: {showMeasure: false}
                                }"
                                unit="{WAERS}"
                                state="Information"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            
              <uxap:ObjectPageSection id="adjuntosPageSection" title="{i18n>detalleViewAdjuntos}" titleUppercase="false">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection >
                        <Table id="AdjuntosDetalle"
                items="{
                    path:'/Adjuntos'
                }"
                updateFinished="onUpdateFinishedAdjuntos"
                noDataText="Actualmente no hay archivos">
                <headerToolbar>
                    <OverflowToolbar >
                        <Title text="{facturaView>/tituloListaAdjuntos}" />
                        <ToolbarSpacer />
                        <u:FileUploader
                            name="myFileUpload"
                            placeholder="Seleccione archivos"
                            uploadUrl="upload/"
                            buttonText="Seleccionar Adjunto"
                            style="Emphasized"
                            tooltip="Adjunte sus archivos"
                            change="onCargaAdjuntos"
                            buttonOnly="true"
                            icon="sap-icon://attachment"
                            iconOnly="{device>/system/phone}"/>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column >
                        <Label text="Nombre" />
                    </Column>
                    <Column demandPopin="true" minScreenWidth="Tablet">
                        <Label text="Fecha de modificación" />
                    </Column>
                    <Column demandPopin="true" minScreenWidth="Tablet">
                        <Label text="Tipo de Archivo" />
                    </Column>
                    <Column width="3rem">
                        <Label text="" />
                    </Column>
                    <Column width="3rem">
                        <Label text="" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem >
                        <Text text="{name}" />
                        <Text text="{
                            path: 'lastModifiedDate',
                            formatter: '.formatter.formatDateView'    
                        }" />

                        <ObjectStatus
                            text="{type}" 
                            state="Indication07"/>
                        <Button type="Reject" icon="sap-icon://delete" press="onEliminarAdjunto"/>
                        <Button type="Ghost" icon="sap-icon://download" press="downloadFromBase64"/>
                    </ColumnListItem>
                </items>
            </Table>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        
        </uxap:sections>
    </uxap:ObjectPageLayout>
