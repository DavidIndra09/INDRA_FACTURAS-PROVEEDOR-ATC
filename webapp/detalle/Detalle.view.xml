        <uxap:headerContent > 
        <Title text="{detalleView>/detalleViewTitle}" level="H2"  width="90%"></Title>     
        
          <Button
                        icon="sap-icon://decline"
                        type="Reject"
                        press=".onNavBack"                        
                    />
        </uxap:headerContent>
        <uxap:sections>
            <uxap:ObjectPageSection id="formSection" title="{i18n>detalleViewFormularioSection}" titleUppercase="false">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection >
                        <core:Fragment
                        fragmentName="usil.com.createinvoice.atc.detalle.Cabecera"
                    />
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            
          <uxap:ObjectPageSection id="tableSection" title="{i18n>detalleViewTableSection}" titleUppercase="false">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection >
                                <Table
                id="reviewTable"
                items="{path: '/'}"
                class="sapUiTinyMarginTop"
                width="auto"
                updateFinished="onReviewsLoaded"
                growing="true"
                growingThreshold="10"
                growingScrollToLoad="true"
                noDataText="No hay Posiciones"
