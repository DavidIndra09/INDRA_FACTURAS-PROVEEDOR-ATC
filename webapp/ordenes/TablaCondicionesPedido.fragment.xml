<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
   <Table
        visible="false"
        id="idTableCondicionesPedido"
        width="auto"
        items="{
            path: '/CondPedido',
            sorter: {
                path: 'conformidad',
                descending: false
            }
        }"
        noDataText="{ordenView>/tableNoDataText}"
        busyIndicatorDelay="{ordenView>/tableBusyDelay}"
        growing="true"
        growingScrollToLoad="true"        
        mode="MultiSelect">
        
        <headerToolbar>
            <OverflowToolbar>
                <Title
                    id="tableHeaderCondPedido"
                    text="{ordenView>/ordenTableTitle}"
                    level="H3"/>
                <ToolbarSpacer />
                <SearchField
                    id="searchFieldCondPedido"
                    tooltip="{i18n>ordenSearchTooltip}"                    
                    liveChange="onBusquedaRapida">
                    <layoutData>
                        <OverflowToolbarLayoutData
                            maxWidth="200px"
                            priority="NeverOverflow"/>
                    </layoutData>
                </SearchField>
                <Switch id="SwitchTableCP"  customTextOn="COND" customTextOff="POS" change="onShowHideFilters">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
			   </Switch>
            </OverflowToolbar>
        </headerToolbar>

        <columns>           
            <Column demandPopin="true" minScreenWidth="Tablet"  width="9rem">
                <Label text="{i18n>ordenCompra}" design="Bold"/>
            </Column>
            <Column demandPopin="true" minScreenWidth="Tablet" width="6rem">
                <Label text="Condición documento" design="Bold"/>
            </Column>

            <Column demandPopin="true" minScreenWidth="Tablet">
                <Label text="Posición" design="Bold"/>
            </Column>
             <Column demandPopin="true" minScreenWidth="Tablet" width="12rem">
                <Label text="Clase condición" design="Bold"/>
            </Column>
             <Column hAlign="End" demandPopin="true" minScreenWidth="Tablet" width="4rem">
                <Label text="Importe" design="Bold"/>
            </Column>
            <Column hAlign="End" demandPopin="true" minScreenWidth="Tablet" width="6rem">
                <Label text="Moneda" design="Bold"/>
            </Column>            
        </columns>

        <items>
            <ColumnListItem
                press=".onPress">
                <cells>                
                 
                    <Text text="{EBELN}" />
                    <Text text="{EBELP}" />
                    <Text text="{MATNR}" />
                    <Text text="{TXZ01}" /> 
                    <Text text="{MEINS}" />
                    <Text text="{MEINS}" />  
                       
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>