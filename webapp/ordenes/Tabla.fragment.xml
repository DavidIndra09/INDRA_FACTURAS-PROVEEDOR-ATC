<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Table visible="true" id="idTableOrdenes" width="auto" items="{
            path: '/Ordenes',
            sorter: {
                path: 'conformidad',
                descending: false
            }
        }" noDataText="{ordenView>/tableNoDataText}" busyIndicatorDelay="{ordenView>/tableBusyDelay}" growing="true" growingThreshold="10" updateFinished=".onUpdateFinished" mode="MultiSelect">

        <headerToolbar>
            <OverflowToolbar>
                <Title id="tableHeader" text="Posiciones (0)" level="H3"/>
                <ToolbarSpacer />
                <SearchField id="searchField" tooltip="{i18n>ordenSearchTooltip}" liveChange="onBusquedaRapida">
                    <layoutData>
                        <OverflowToolbarLayoutData maxWidth="200px" priority="NeverOverflow"/>
                    </layoutData>
                </SearchField>
                <Switch id="SwitchTableOC" state="false" customTextOn="COND" customTextOff="POS" change="onShowHideFilters">
                    <layoutData>
                        <FlexItemData growFactor="1" />
                    </layoutData>
                </Switch>
            </OverflowToolbar>
        </headerToolbar>

        <columns>
            <Column >
                <Label text="{i18n>conformidad}" design="Bold"/>
            </Column>
            <!-- <Column demandPopin="true" minScreenWidth="Tablet" width="6rem">
                <Label text="{i18n>posConformidad}" design="Bold"/> 
            </Column>-->
            <Column demandPopin="true" minScreenWidth="Tablet" width="9rem">
                <Label text="{i18n>ordenCompra}" design="Bold"/>
            </Column>
            <Column demandPopin="true" minScreenWidth="Tablet" width="6rem">
                <Label text="{i18n>posOrden}" design="Bold"/>
            </Column>

            <Column demandPopin="true" minScreenWidth="Tablet">
                <Label text="{i18n>material}" design="Bold"/>
            </Column>
            <Column demandPopin="true" minScreenWidth="Tablet" width="10rem">
                <Label text="{i18n>descmaterial}" design="Bold"/>
            </Column>
            <Column hAlign="End" demandPopin="true" minScreenWidth="Tablet" width="4rem">
                <Label text="{i18n>unidadMedida}" design="Bold"/>
            </Column>
            <Column hAlign="End" demandPopin="true" minScreenWidth="Tablet">
                <Label text="{i18n>cantidad}" design="Bold" />
            </Column>
            <Column hAlign="End" demandPopin="true" minScreenWidth="Tablet">
                <Label text="{i18n>cantidadIngresada}" design="Bold" />
            </Column>
            <Column hAlign="End" demandPopin="true" minScreenWidth="Tablet">
                <Label text="{i18n>cantidadFacturada}" design="Bold" />
            </Column>
            <Column hAlign="End" demandPopin="true" minScreenWidth="Tablet">
                <Label text="{i18n>cantidadPendiente}" design="Bold" />
            </Column>
            <Column demandPopin="true" minScreenWidth="Tablet" hAlign="End" width="8rem">
                <Label text="{i18n>importe}" design="Bold"/>
            </Column>
            
        </columns>

        <items>
            <ColumnListItem press=".onPress">
                <cells>
                    <ObjectIdentifier title="{BELNR}"/>
                    <!-- <Text text="{BUZEI}" /> -->
                    <Text text="{EBELN}" />
                    <Text text="{EBELP}" />
                    <Text text="{MATNR}" />
                    <Text text="{TXZ01}" />
                    <Text text="{MEINS}" />
                    <ObjectNumber number="{
                                    path: 'MENGE',
                                    formatter: '.formatter.numberUnit'
                                }" />
                    <ObjectNumber number="{
                                    path: 'MENGE_INGR',
                                    formatter: '.formatter.numberUnit'
                                }" />
                    <ObjectNumber number="{
                                    path: 'MENGE_FACT',
                                    formatter: '.formatter.numberUnit'
                                }" />
                    <Input value="{path: 'MENGE_PEND'}" liveChange="onValidarMontoIngresado" />
                    <ObjectNumber number="{
                            parts:[{path:'NETPR',formatter: '.formatter.formatCurrency'}]                                                        
                        }" unit="{WAERS}" state="Information" />

                </cells>
            </ColumnListItem>
        </items>
    </Table>




</core:FragmentDefinition>