<mvc:View
    controllerName="usil.com.createinvoice.atc.solicitudes.Solicitudes"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
>
    <f:DynamicPage
        id="page"
        showFooter="true"
    >
        <f:content>
            <core:Fragment
                fragmentName="usil.com.createinvoice.atc.solicitudes.TablaSolicitudes"
                type="XML"
            />
        </f:content>

        <f:header>
            <f:DynamicPageHeader backgroundDesign="Transparent">
                <f:content>
                    <core:Fragment
                        fragmentName="usil.com.createinvoice.atc.solicitudes.FiltroSolicitudes"
                        type="XML"
                    />
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:title>
            <f:DynamicPageTitle
                areaShrinkRatio="1:1.6:1.6"
                backgroundDesign="Transparent"
            >
                <f:actions>
                <Title id="ProveedorSeleccionado" text=""></Title>
                <Label text="" />
                    <!-- <Label text="Selecciona un proveedor:" />
                    <ComboBox id="comboBox" selectedKey="1">
                        <items>
                            <core:Item key="1" text="Proveedor 1" />
                            <core:Item key="2" text="Proveedor 2" />
                        </items>
                    </ComboBox>-->
                    <Button
                        icon="sap-icon://create"
                        text="Crear Factura"
                        type="Emphasized"
                        press="onNavFacturaNueva"
                    />
                </f:actions>
                <f:heading>
                    <Title
                        text="{i18n>solicitudesTitle}"
                        level="H2"
                    />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    icon="sap-icon://accept"
                    text="Solicitar Pago de Factura"
                    type="Success"
                    press="onSolicitarPagoFactura"
                />
                <!-- <Button icon="sap-icon://decline" text="Rechazar" type="Negative" press="onRechazarFacturas" /> -->
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
