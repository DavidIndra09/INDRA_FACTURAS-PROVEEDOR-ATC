<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    <form:Form
        editable="true"
        binding="{/Busqueda}">
        <form:formContainers>
            <form:FormContainer>
                <form:formElements>
                    <form:FormElement>
                        <form:fields>
                            <Input 
                                value="{codigoSolicitud}"
                                placeholder="Ingrese el cÃ³digo de solicitud"
                                showSuggestion="true"
                                maxLength="10"
                                type="Number">
                                <!-- suggestionItems="{
                                    path:'facturaModel>/CodigoSolicitud'
                                }">
                                <core:ListItem 
                                    text="{facturaModel>codigoSolicitud}" 
                                    key="{facturaModel>codigoSolicitud}" -->
                            </Input>
                        </form:fields>
                        <form:label>
                            <Label text="{i18n>solicitud}" />
                        </form:label>
                    </form:FormElement>
                    <form:FormElement>
                        <form:fields>
                            <Input 
                                value="{codigoFactura}"
                                showSuggestion="true"
                                placeholder="Ingrese la factura"
                                 >
                                 <!-- suggestionItems="{
                                    path:'facturaModel>/CodigoFactura'
                                }">
                                <core:ListItem 
                                    text="{facturaModel>codigoFactura}" 
                                    key="{facturaModel>codigoFactura}" -->
                            </Input>
                        </form:fields>
                        <form:label>
                            <Label text="{i18n>factura}" />
                        </form:label>
                    </form:FormElement>
                    <form:FormElement>
                        <form:fields>
                            <DateRangeSelection
                                id="idDateRangeEmision"
                                valueFormat="dd.MM.yyyy"
                                displayFormat="dd.MM.yyyy"
                                change="onSeleccionFechaEmision" />
                        </form:fields>
                        <form:label>
                            <Label text="{i18n>fechaEmision}" />
                        </form:label>
                    </form:FormElement>
                    <form:FormElement>
                        <form:fields>
                            <DateRangeSelection
                                id="idDateRangeRegistro"
                                valueFormat="dd.MM.yyyy"
                                displayFormat="dd.MM.yyyy" 
                                change="onSeleccionFechaRegistro"/>
                        </form:fields>
                        <form:label>
                            <Label text="{i18n>fechaRegistro}" />
                        </form:label>
                    </form:FormElement>
                    <form:FormElement>
                        <form:fields>
                            <MultiComboBox 
                                items="{
                                    path: 'EstadosFactura>/'
                                }"
                                
                                >
                                <core:ListItem
                                    text="{EstadosFactura>description}"
                                    key="{EstadosFactura>ID}"
                                    icon="{EstadosFactura>icon}"/>
                            </MultiComboBox>
                        </form:fields>
                        <form:label>
                            <Label text="{i18n>estadoFactura}" />
                        </form:label>
                    </form:FormElement>
                    
                    <form:FormElement>
                        <form:fields>
                            <Button text="Buscar" type="Emphasized" icon="sap-icon://search" press="onBuscarFacturas" class="sapUiSmallMarginTop" />
                            <Button text="Limpiar" type="Ghost" icon="sap-icon://clear-filter" press="onLimpiarFiltros" class="sapUiSmallMarginTop" />
                        </form:fields>
                        <form:label>
                            <Label text="" />
                        </form:label>
                    </form:FormElement>
                </form:formElements>
                <form:title>
                </form:title>
                <form:toolbar>
                </form:toolbar>
            </form:FormContainer>
        </form:formContainers>
        <form:layout>
            <form:ColumnLayout
                columnsL="3"
                columnsM="2"
                columnsXL="6"
                emptyCellsLarge="0"
                labelCellsLarge="4"/>
        </form:layout>
        <form:title>
        </form:title>
        <form:toolbar>
        </form:toolbar>
    </form:Form>
</core:FragmentDefinition>